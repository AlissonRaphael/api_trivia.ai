// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id          String      @id     @default(uuid())
  phone       String      @unique
  email       String      @unique
  name        String?      @unique
  avatar      String?
  ranking     String?
  position    String?
  created_at  DateTime            @default(now())

  @@map("player")
}
